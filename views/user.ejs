<% include partials/header %>
<div class="container">
    <div class="column is-12" id="main">
        <section class="hero is-info welcome is-small">
                <div class="hero-body">
                    <div class="container">
                        <h1 class="title"><span style="cursor:pointer" onclick="openNav()">&#9776;</span> Users </h1>
                    </div>
                </div>
        </section>
    <!-- <div class="columns is-mobile" id="main"> -->
<div class="column">
    <div class="card events-card" id="userLoad">
        <!-- <header class="card-header">
            <p class="card-header-title">List of Registered User</p>
            <a href="#" class="card-header-icon" aria-label="more options">
                <span class="icon"><i class="fa fa-angle-down" aria-hidden="true"></i></span>
            </a>
        </header>         -->
        <div class="card-table">
            <div class="content">
                <table class="table is-fullwidth is-striped is-hoverable is-responsive" >
                    <tbody class="has-text-centered">
                        <tr>
                            <td>No.</td>
                            <td>Name</td>
                            <td>Edit</td>
                            <td>Admin</td>
                        </tr>
                <% for(let [n, i] of users.entries() ){ %>
                        <tr>
                            <td><%= n+1 %></td>
                            <td><%= i.username %></td>
                            <td data-id="<%= i._id %>">
                                <span class="icon button is-success user-modal" data-modal-id="#user-modal"><i class="fa fa-edit" aria-hidden="true"></i></span>
                                <span class="icon button is-danger userDel"><i class="fa fa-trash" aria-hidden="true"></i></span>
                            </td>
                            <td>
                                <% let status; if (i.isAdmin === true){ status='checked'} %>
                                <% if(user.isAdmin === true){ %>        
                                    <label class="switch" style="zoom:80%;">
                                            <input type="checkbox" name="isAdmin" <%= status %> >
                                            <span class="slider round"></span>
                                    </label>
                                <% }else{ %>
                                    <label class="switch" style="zoom:80%;">
                                            <input type="checkbox" <%= status %> disabled>
                                            <span class="slider round"></span>
                                    </label>
                                <% } %>
                            </td>
                        </tr>
                <% } %>
                    </tbody>
                </table>
            </div>
        </div>
        <footer class="card-footer">

        </footer>
    </div>
</div>

    </div>
</div>

    <div aria-hidden="" class="modal is-mobile" id="user-modal">
        <div class="modal-background close-modal" data-modal-id="#user-modal"></div>
        <div class="modal-card">
            <header class="modal-card-head">
                <p class="modal-card-title">Edit: <span class="user-name"></span></p>
                <button aria-label="close" class="delete close-modal" data-modal-id="#user-modal"></button>
            </header>
            <section class="modal-card-body">
                <form method="POST" id="userForm">
                    <div class="field">
                        <div class="control">
                            <input class="input" type="text" name="eUsername" placeholder="Change Name">
                        </div>
                    </div>

                    <div class="field">
                        <div class="control">
                            <input class="input" type="password" name="ePassword" placeholder="Update Password" autocomplete="false">
                        </div>
                    </div>
                    <div class="field is-grouped is-grouped-centered">
                      <div class="control">
                          <button class="button is-success">
                              <span class="icon is-small">
                                  <i class="fa fa-check"></i>
                              </span>
                              <span>Save</span>
                          </button>
                      </div>
                      <div class="control">
                          <button class="button is-danger is-outlined" type="reset">
                              <span>Reset</span>
                              <span class="icon is-small">
                                  <i class="fa fa-times"></i>
                              </span>
                          </button>
                      </div>
                  </div>
                </form>
            </section>
        </div>
    </div>

<% include partials/footer %>